<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Fecha de inicio -->
    <TextView
        android:id="@+id/tv_fecha_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha de inicio"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_fecha_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="DD/MM/YY"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/tv_fecha_inicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Fecha de fin -->
    <TextView
        android:id="@+id/tv_fecha_fin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha de fin"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_fecha_inicio"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_fecha_fin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="DD/MM/YY"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/tv_fecha_fin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Hora de inicio del turno -->
    <TextView
        android:id="@+id/tv_hora_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hora de inicio del turno"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_fecha_fin"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_hora_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="HH:MM"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/tv_hora_inicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Hora de fin del turno -->
    <TextView
        android:id="@+id/tv_hora_fin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hora de fin del turno"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_hora_inicio"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_hora_fin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="HH:MM"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/tv_hora_fin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Hora de inicio descanso -->
    <TextView
        android:id="@+id/tv_descanso_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inicio descanso"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_hora_fin"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_descanso_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="HH:MM"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/tv_descanso_inicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Hora de fin descanso -->
    <TextView
        android:id="@+id/tv_descanso_fin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fin descanso"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_descanso_inicio"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_descanso_fin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="HH:MM"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/tv_descanso_fin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BotÃ³n generar horarios -->
    <Button
        android:id="@+id/btn_generar_horarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar Horarios"
        app:layout_constraintTop_toBottomOf="@id/et_descanso_fin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
